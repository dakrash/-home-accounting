<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" type="text/css" href="{{path}}css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="{{path}}DataTables/datatables.min.css">
    <link rel="stylesheet" type="text/css" href="{{path}}css/bootstrap-select.css">
    <link rel="stylesheet" type="text/css" href="{{path}}css/main.css">
    <link rel="stylesheet" type="text/css" href="{{path}}css/fontawesome/css/all.css">
    <link rel="stylesheet" type="text/css" href="{{path}}css/bootstrap-datepicker.css">
    {{#each link}}
        <link rel="stylesheet" type="text/css" href="{{this}}">
    {{/each}}
    <script type="text/javascript" src="{{path}}js/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="{{path}}js/bootstrap.bundle.js"></script>
    <script type="text/javascript" src="{{path}}js/blockUI.js"></script>
    <script type="text/javascript" src="{{path}}js/global.js"></script>
    <script type="text/javascript" src="{{path}}DataTables/datatables.min.js"></script>
    <script type="text/javascript" src="{{path}}js/bootstrap-select.js"></script>
    <script type="text/javascript" src="{{path}}js/i18n/bootstrap-select-ru.js"></script>
    <script type="text/javascript" src="{{path}}js/main.js"></script>
    <script type="text/javascript" src="{{path}}js/bootstrap-datepicker.js"></script>
    <script type="text/javascript" src="{{path}}js/i18n/bootstrap-datepicker.ru.js"></script>
    {{#each script}}
        <script type="text/javascript" src="{{this}}"></script>
    {{/each}}
</head>
<body>
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <nav class="navbar active-back bg-light navbar-expand-md">
                <div class="navbar-collapse">
                    <ul class="nav navbar-nav mr-auto">
<!--                        <a class="btn btn-custom-yellow btn-custom-ellipse" href="/receipts">Создать транзакцию-->
<!--                        </a>-->
                        <div class="dropdown">
                            <button class="btn btn-custom-yellow btn-custom-ellipse dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Создать
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="/receipts">Чек</a>
                                <a class="dropdown-item" href="/refill">Пополнение</a>
                                <a class="dropdown-item" href="/expense">Расход</a>
                            </div>
                        </div>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle form-text" href="#" id="shoppingList"
                               role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Списки
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="shoppingList">
                                <!--                                <a class="dropdown-item" href="/lists/current" id="current">Список покупок</a>-->
                                <li class="dropdown-submenu dropright">
                                    <a class="form-text dropdown-item test dropdown-toggle" tabindex="-1" href="#"
                                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Списки
                                        покупок</a>
                                    <ul class="dropdown-menu">
                                        {{#if shoppingLists}}
                                            {{#each shoppingLists}}
                                                <li><a class="dropdown-item form-text" tabindex="-1"
                                                       href="/lists/shopping/{{this.id}}">{{this.name}}</a></li>
                                            {{/each}}
                                        {{else}}
                                            <li class="dropdown-item disabled form-text">Списки отсутствуют</li>
                                        {{/if}}
                                        <div class="dropdown-divider"></div>
                                        <li>
                                            <a class="dropdown-item form-text" tabindex="-1" id="createShoppingList">Создать
                                                список
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li><a class="dropdown-item form-text" href="/lists/categories">Категории</a>
                                </li>
                                <li><a class="dropdown-item form-text" href="/lists/products">Продукты</a>
                                </li>
                                <li><a class="dropdown-item form-text" href="/lists/wallets">Кошельки</a></li>


                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle form-text" href="#" id="information"
                               role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                История
                            </a>
                            <div class="dropdown-menu" aria-labelledby="information">
                                <a class="dropdown-item form-text" href="/history/receipts">Чеки</a>
                                <a class="dropdown-item form-text" href="/history/transactions">Транзакции</a>
                            </div>
                        </li>
<!--                        <li class="nav-item dropdown">-->
<!--                            <a class="nav-link dropdown-toggle form-text" href="#" id="information"-->
<!--                               role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">-->
<!--                                Информация-->
<!--                            </a>-->
<!--                            <div class="dropdown-menu" aria-labelledby="information">-->
<!--                                <a class="dropdown-item form-text" href="#" id="balance">Кошельки</a>-->
<!--                            </div>-->
<!--                        </li>-->
                    </ul>
                </div>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle form-text" href="#" id="profileList"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            {{email}}
                        </a>
                        <div class="dropdown-menu" aria-labelledby="profileList">
                            <a class="dropdown-item form-text" href="#" id="exit">Выйти</a>
                        </div>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    {{{ body }}}
</div>
</body>
</html>