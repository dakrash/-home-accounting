<div class="row mt-4 justify-content-center">
    <div class="col">
        <table class="table table-striped table-bordered" id="datatable" style="width:100%">
            <thead>
            <tr>
                {{#if receipts}}
                    <th scope="col">Дата добавления</th>
                    <th scope="col">Дата покупки</th>
                    <th scope="col">Кошелек</th>
                    <th scope="col">Сумма</th>
                    <th scope="col">Удаленный статус</th>
                    <th scope="col">Статус</th>
                    <th scope="col"></th>
                {{else}}
                    <th scope="col">Дата добавления</th>
                    <th scope="col">Дата операции</th>
                    <th scope="col">Тип операции</th>
                    <th scope="col">Кошелек</th>
                    <th scope="col">Сумма</th>
                    <th scope="col">Комментарий</th>
                    <th scope="col"></th>
                {{/if}}
            </tr>
            </thead>
            {{#if receipts.items}}
                <tbody>
                {{#each receipts.items}}
                    <tr>
                        <td>{{this.createdate}}</td>
                        <td>{{this.date}}</td>
                        <td>{{this.wallet_name}}</td>
                        <td>{{this.sum}}</td>
                        <td style="color:{{#if this.remote_state}}green{{else}}red{{/if}}">{{#if this.remote_state}}
                            Найден{{else}}Не найден{{/if}}</td>
                        <td style="color:{{#if this.state}}green{{else}}red{{/if}}">{{#if this.state}}
                            Проведен{{else}}Не проведен{{/if}}</td>
                        <td class="center">
                            <a href="{{this.href}}" class="mt-1 mb-1 btn btn-custom-yellow btn-custom-ellipse">
                                Подробнее
                            </a>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            {{/if}}

            {{#if transactions.items}}
                <tbody>
                {{#each transactions.items}}
                    <tr>
                        <td>{{this.createdate}}</td>
                        <td>{{this.date}}</td>
                        <td>{{this.type}}</td>
                        <td>{{this.wallet_name}}</td>
                        <td>{{this.sum}}</td>
                        <td>{{this.comment}}</td>
                        <td class="center">
                            <a href="{{this.href}}" class="mt-1 mb-1 btn btn-custom-yellow btn-custom-ellipse">
                                Подробнее
                            </a>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            {{/if}}
        </table>
    </div>
</div>